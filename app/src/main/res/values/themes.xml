<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Themes  -->
    <style name="JPMMGOTheme.Light" parent="JPMMGOTheme.Light.Base"/>

    <style name="JPMMGOTheme.Light.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/medium_blue</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:activatedBackgroundIndicator">@drawable/selector_activated_background</item>
		<item name="android:fastScrollPreviewBackgroundRight">@drawable/fast_scrollbar_thumb</item>
        <item name="android:fastScrollPreviewBackgroundLeft">@drawable/fast_scrollbar_thumb</item>

        <item name="drawerLayoutBackground">@color/white_alpha</item>

        <!-- Day/Night Mode -->
        <item name="activeColor">@color/dark_gray</item>
        <item name="primaryColor">@color/white</item>
        <item name="secondaryColor">@color/medium_gray</item>
        <item name="thirdColor">@color/light_gray</item>
        <item name="highlightColor">@color/light_yellow</item>
        <item name="stickyColor">@color/rule_gray</item>
        <item name="ruleColor">@color/rule_gray</item>

        <!-- Inactive track color -->
        <item name="android:colorForeground">@color/light_gray</item>
        
    </style>

    <style name="JPMMGOTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/medium_blue</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:activatedBackgroundIndicator">@drawable/selector_activated_background</item>
        <item name="android:fastScrollPreviewBackgroundRight">@drawable/fast_scrollbar_thumb</item>
        <item name="android:fastScrollPreviewBackgroundLeft">@drawable/fast_scrollbar_thumb</item>

        <item name="drawerLayoutBackground">@color/dark_gray_alpha</item>

        <!-- Day/Night Mode -->
        <item name="activeColor">@color/off_white</item>
        <item name="primaryColor">@color/black</item>
        <item name="secondaryColor">@color/off_white</item>
        <item name="thirdColor">@color/light_gray</item>
        <item name="highlightColor">@color/dark_blue</item>
        <item name="stickyColor">@color/medium_gray</item>
        <item name="ruleColor">@color/dark_gray</item>

    </style>
    
</resources>